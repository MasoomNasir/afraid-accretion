---
// src/components/ProductCard.astro
interface Props {
  title: string;
  price: number;
  image: string;
  slug: string;
}

const { title, price, image, slug } = Astro.props;
---

<div class="group relative">
  <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-lg bg-gray-200 dark:bg-gray-800">
    <img
      src={image}
      alt={title}
      class="h-full w-full object-cover object-center group-hover:opacity-75 transition-opacity"
    />
  </div>
  <div class="mt-4 flex justify-between">
    <div>
      <h3 class="text-sm text-gray-700 dark:text-gray-200">
        <a href={`/products/${slug}`}>
          <span aria-hidden="true" class="absolute inset-0"></span>
          {title}
        </a>
      </h3>
    </div>
    <p class="text-sm font-medium text-gray-900 dark:text-white">${price}</p>
  </div>
</div>