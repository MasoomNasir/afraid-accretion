---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import ProductGrid from '../components/ui/ProductGrid.astro';

// Example products data (replace with your actual data source)
const products = [
  {
    title: "Basic Tee",
    price: 35,
    image: "https://picsum.photos/seed/picsum/400/400",
    slug: "basic-tee"
  },
  {
    title: "Premium Hoodie",
    price: 75,
    image: "https://picsum.photos/seed/picsum/400/400",
    slug: "premium-hoodie"
  },
  // Add more products...
];
---

<BaseLayout title="Welcome to Our Store">
  <div class="space-y-12">
    <div class="text-center">
      <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-6xl">
        New Arrivals
      </h1>
      <p class="mt-4 text-xl text-gray-500">
        Check out our latest collection of premium products.
      </p>
    </div>

    <ProductGrid products={products} />
    
    <div class="text-center">
      <a
        href="/products"
        class="inline-block rounded-md border border-transparent bg-indigo-600 px-8 py-3 text-center font-medium text-white hover:bg-indigo-700"
      >
        View All Products
      </a>
    </div>
  </div>
</BaseLayout>